{
  "name": "cyclehub-workspace",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "frontend",
    "admin-panel",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd server && npm run dev",
    "dev:admin": "cd admin-panel && npm run dev",
    "build": "npm run build:frontend && npm run build:admin && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:admin": "cd admin-panel && npm run build",
    "build:backend": "cd server && npm run build",
    "install:all": "npm install && cd frontend && npm install && cd ../admin-panel && npm install && cd ../server && npm install"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}